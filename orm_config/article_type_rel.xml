<table name="article_type_rel" namespace="blog.data" desc="文章分类关系表">
    <columns>
        <column name="id" type="int64" auto_increment="true" desc="自增id"/>
        <column name="article_id" type="int64" desc="文章id"/>
        <column name="type_id" type="int64" desc="分类id"/>
        <column name="create_time" type="datetime" desc="创建时间"/>
        <column name="update_time" type="datetime" unpdate="current_timestamp" desc="更新时间"/>
    </columns>
    <indexs>
        <index name="pk" cols="id" type="pk"/>
        <index name="article_id" cols="article_id" type="index"/>
        <index name="type_id" cols="type_id" type="index"/>
        <index name="article_id_type_id" cols="article_id,type_id" type="uniq"/>
    </indexs>
</table>
