<table name="article" namespace="blog.data" desc="博客文章">
    <columns>
        <column name="id" type="int64" auto_increment="true" desc="文章id"/>
        <column name="user_id" type="int64" desc="用户id"/>
        <column name="title" type="string" length="256" desc="文章标题"/>
        <column name="content" type="text" desc="文章内容"/>
        <column name="desc_content" type="text" desc="文章描述"/>
        <column name="first_picture" type="text" desc="首图引用地址"/>
        <column name="type" type="string" length="30" desc="分类"/>
        <column name="views" type="int64" desc="流量数"/>
        <column name="state" type="int64" desc="文章发表状态"/>
        <column name="appreciate" type="int64" desc="赞赏是否开启"/>
        <column name="comment" type="int64" desc="评论是否开启"/>
        <column name="recommend" type="int64" desc="是否推荐"/>
        <column name="statement" type="int64" desc="版权说明是否开启"/>
        <column name="publish_time" type="datetime" desc="发布时间"/>
        <column name="create_time" type="datetime" desc="创建时间"/>
        <column name="update_time" type="datetime" update="current_timestamp" desc="更新时间"/>
    </columns>
    <indexs>
        <index name="pk" cols="id" type="pk"/>
        <index name="user_id" cols="user_id" type="index"/>
    </indexs>
</table>
